<VirtualHost *:80>
        ServerName example.org
        SetEnv CONFIG dev

        DocumentRoot "{{destination}}/www"
        <Directory "{{destination}}/www">
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>

        RewriteEngine on
        RewriteOptions inherit

        ErrorLog {{destination}}/log/error.log
</VirtualHost>

